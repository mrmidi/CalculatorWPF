<Window x:Class="CalculatorWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CalculatorWPF"
        xmlns:text="http://schemas.microsoft.com/winfx/2006/xaml/presentation/options"
        mc:Ignorable="d"
        Title="Integer Calculator" Height="600" Width="900"
        MinHeight="500" MinWidth="700"
        Background="#F5F5F5">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" 
                   Text="Integer Calculator" 
                   FontSize="28" 
                   FontWeight="Bold" 
                   Foreground="#2C3E50"
                   Margin="0,0,0,20"/>

        <!-- Main Content -->
        <TabControl Grid.Row="1" Background="White" BorderThickness="0">
            <!-- Calculator Tab -->
            <TabItem Header="Calculator" FontSize="14" Padding="10,5">
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Expression Input -->
                    <StackPanel Grid.Row="0" Margin="0,0,0,15">
                        <TextBlock Text="Enter Expression:" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,6"/>
                        <TextBox x:Name="ExpressionTextBox" 
                                 FontSize="16" 
                                 FontFamily="Segoe UI"
                                 Padding="8"
                                 Height="35"
                                 VerticalContentAlignment="Center"
                                 HorizontalContentAlignment="Left"
                                 BorderBrush="#BDC3C7"
                                 BorderThickness="2"
                                 AcceptsReturn="False"
                                 HorizontalScrollBarVisibility="Auto"
                                 VerticalScrollBarVisibility="Disabled"
                                 TextWrapping="NoWrap"
                                 TextOptions.TextFormattingMode="Display"
                                 TextOptions.TextRenderingMode="ClearType"/>
                        <TextBlock Text="Example: 2 + 3 * 2" 
                                   FontSize="11" 
                                   Foreground="#7F8C8D" 
                                   Margin="0,4,0,0"/>
                    </StackPanel>

                    <!-- Calculate Button -->
                    <Button Grid.Row="1" 
                            x:Name="CalculateButton"
                            Content="Calculate" 
                            Click="CalculateButton_Click"
                            FontSize="16"
                            FontWeight="SemiBold"
                            Height="45"
                            Background="#3498DB"
                            Foreground="White"
                            BorderThickness="0"
                            Cursor="Hand"
                            Margin="0,0,0,20">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#3498DB"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" 
                                                    CornerRadius="5"
                                                    BorderThickness="0">
                                                <ContentPresenter HorizontalAlignment="Center" 
                                                                  VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#2980B9"/>
                                    </Trigger>
                                    <Trigger Property="IsEnabled" Value="False">
                                        <Setter Property="Background" Value="#BDC3C7"/>
                                        <Setter Property="Foreground" Value="#7F8C8D"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <!-- Result -->
                    <StackPanel Grid.Row="2" Margin="0,0,0,15">
                        <TextBlock Text="Result:" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,6"/>
                        <Border Background="#ECF0F1" 
                                BorderBrush="#BDC3C7" 
                                BorderThickness="2"
                                CornerRadius="5"
                                Padding="12"
                                MinHeight="50">
                            <TextBlock x:Name="ResultTextBlock" 
                                       Text="Enter an expression and click Calculate"
                                       FontSize="16"
                                       TextWrapping="Wrap"
                                       VerticalAlignment="Center"/>
                        </Border>
                    </StackPanel>

                    <!-- Calculator Information -->
                    <Border Grid.Row="3" 
                            Background="#E3F2FD" 
                            BorderBrush="#2196F3" 
                            BorderThickness="1"
                            CornerRadius="5"
                            Padding="12"
                            Margin="0,15,0,0"
                            MaxHeight="280"
                            VerticalAlignment="Top">
                        <StackPanel>
                            <TextBlock Text="Calculator Information:" FontWeight="SemiBold" Margin="0,0,0,8"/>
                            <TextBlock Text="• Available operations: + (addition), - (subtraction), * (multiplication), / (division)" Margin="0,2" TextWrapping="Wrap"/>
                            <TextBlock Text="• Operator precedence: multiplication and division are calculated before addition and subtraction" Margin="0,2" TextWrapping="Wrap"/>
                            <TextBlock Text="• Supports negative numbers (e.g., -5, 2 + -3)" Margin="0,2" TextWrapping="Wrap"/>
                            <TextBlock Text="• Supports large numbers (no size limit)" Margin="0,2" TextWrapping="Wrap"/>
                            <TextBlock Text="• Only integers are supported - decimal numbers are not allowed" Margin="0,2" TextWrapping="Wrap"/>
                            <TextBlock Text="• Division by zero will show an error message" Margin="0,2" TextWrapping="Wrap"/>
                            <TextBlock Text="• Press Enter to calculate or click the Calculate button" Margin="0,2" TextWrapping="Wrap"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </TabItem>

            <!-- Batch Processing Tab -->
            <TabItem Header="Batch File Processing" FontSize="14" Padding="10,5">
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Input File -->
                    <StackPanel Grid.Row="0" Margin="0,0,0,15">
                        <TextBlock Text="Input File:" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,8"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBox x:Name="InputFileTextBox" 
                                     Grid.Column="0"
                                     FontSize="14" 
                                     Padding="10"
                                     Height="40"
                                     VerticalContentAlignment="Center"
                                     BorderBrush="#BDC3C7"
                                     BorderThickness="2"
                                     Margin="0,0,10,0"/>
                            <Button Grid.Column="1" 
                                    x:Name="BrowseInputButton"
                                    Content="Browse..."
                                    Click="BrowseInputButton_Click"
                                    Width="100"
                                    Height="40"
                                    Background="#95A5A6"
                                    Foreground="White"
                                    BorderThickness="0"
                                    Cursor="Hand">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Background" Value="#95A5A6"/>
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}" 
                                                            CornerRadius="5"
                                                            BorderThickness="0">
                                                        <ContentPresenter HorizontalAlignment="Center" 
                                                                          VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#7F8C8D"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </Grid>
                    </StackPanel>

                    <!-- Output File -->
                    <StackPanel Grid.Row="1" Margin="0,0,0,15">
                        <TextBlock Text="Output File:" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,8"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBox x:Name="OutputFileTextBox" 
                                     Grid.Column="0"
                                     FontSize="14" 
                                     Padding="10"
                                     Height="40"
                                     VerticalContentAlignment="Center"
                                     BorderBrush="#BDC3C7"
                                     BorderThickness="2"
                                     Margin="0,0,10,0"/>
                            <Button Grid.Column="1" 
                                    x:Name="BrowseOutputButton"
                                    Content="Browse..."
                                    Click="BrowseOutputButton_Click"
                                    Width="100"
                                    Height="40"
                                    Background="#95A5A6"
                                    Foreground="White"
                                    BorderThickness="0"
                                    Cursor="Hand">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Background" Value="#95A5A6"/>
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}" 
                                                            CornerRadius="5"
                                                            BorderThickness="0">
                                                        <ContentPresenter HorizontalAlignment="Center" 
                                                                          VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#7F8C8D"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </Grid>
                    </StackPanel>

                    <!-- Process Button -->
                    <Button Grid.Row="2" 
                            x:Name="ProcessButton"
                            Content="Process File" 
                            Click="ProcessButton_Click"
                            FontSize="16"
                            FontWeight="SemiBold"
                            Height="45"
                            Background="#27AE60"
                            Foreground="White"
                            BorderThickness="0"
                            Cursor="Hand"
                            Margin="0,0,0,15">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#27AE60"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" 
                                                    CornerRadius="5"
                                                    BorderThickness="0">
                                                <ContentPresenter HorizontalAlignment="Center" 
                                                                  VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#229954"/>
                                    </Trigger>
                                    <Trigger Property="IsEnabled" Value="False">
                                        <Setter Property="Background" Value="#BDC3C7"/>
                                        <Setter Property="Foreground" Value="#7F8C8D"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <!-- Progress Bar -->
                    <StackPanel Grid.Row="3" Margin="0,0,0,15">
                        <ProgressBar x:Name="ProcessingProgressBar" 
                                     Height="25"
                                     Minimum="0"
                                     Maximum="100"
                                     Value="0"/>
                        <TextBlock x:Name="ProgressTextBlock" 
                                   Text="" 
                                   FontSize="12" 
                                   Margin="0,5,0,0"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>

                    <!-- Status/Info -->
                    <Border Grid.Row="4" 
                            Background="#FFF3E0" 
                            BorderBrush="#FF9800" 
                            BorderThickness="1"
                            CornerRadius="5"
                            Padding="15"
                            VerticalAlignment="Top">
                        <StackPanel>
                            <TextBlock Text="Batch Processing Information:" FontWeight="SemiBold" Margin="0,0,0,8"/>
                            <TextBlock Text="• Input file should contain one expression per line" Margin="0,2" TextWrapping="Wrap"/>
                            <TextBlock Text="• Empty lines will be preserved in output" Margin="0,2" TextWrapping="Wrap"/>
                            <TextBlock Text="• Invalid expressions will show error messages in output" Margin="0,2" TextWrapping="Wrap"/>
                            <TextBlock Text="• Processing is done asynchronously - UI remains responsive" Margin="0,2" TextWrapping="Wrap"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
