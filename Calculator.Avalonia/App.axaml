<?xml version="1.0" encoding="utf-8"?>
<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="Calculator.AvaloniaApp.App">

  <Application.Resources>
    <!-- Color palette -->
    <SolidColorBrush x:Key="BackgroundBrush" Color="#0B0C0D" />
    <SolidColorBrush x:Key="SurfaceBrush" Color="#151617" />
    <SolidColorBrush x:Key="PanelBrush" Color="#1F2224" />
    <SolidColorBrush x:Key="AccentBrush" Color="#2563EB" />
    <SolidColorBrush x:Key="SuccessBrush" Color="#10B981" />
    <SolidColorBrush x:Key="ForegroundBrush" Color="#E6EDF3" />
    <SolidColorBrush x:Key="MutedBrush" Color="#9CA3AF" />
    <SolidColorBrush x:Key="BorderBrush" Color="#2A2E31" />
  </Application.Resources>

  <Application.Styles>
    <FluentTheme />
    
    <!-- Global defaults -->
    <Style Selector="Window">
      <Setter Property="Background" Value="{StaticResource BackgroundBrush}" />
    </Style>

    <Style Selector="TextBlock">
      <Setter Property="Foreground" Value="{StaticResource ForegroundBrush}" />
    </Style>

    <Style Selector="TextBox">
      <Setter Property="Background" Value="{StaticResource SurfaceBrush}" />
      <Setter Property="Foreground" Value="{StaticResource ForegroundBrush}" />
      <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}" />
      <Setter Property="BorderThickness" Value="1" />
      <Setter Property="CornerRadius" Value="6" />
      <Setter Property="Padding" Value="8" />
    </Style>

    <Style Selector="Button">
      <Setter Property="Background" Value="{StaticResource AccentBrush}" />
      <Setter Property="Foreground" Value="White" />
      <Setter Property="CornerRadius" Value="6" />
      <Setter Property="Padding" Value="10,6" />
      <Setter Property="BorderThickness" Value="0" />
    </Style>

    <Style Selector="ListBox">
      <Setter Property="Background" Value="{StaticResource PanelBrush}" />
      <Setter Property="Foreground" Value="{StaticResource ForegroundBrush}" />
      <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}" />
      <Setter Property="BorderThickness" Value="1" />
    </Style>

    <Style Selector="ProgressBar">
      <Setter Property="Foreground" Value="{StaticResource AccentBrush}" />
      <Setter Property="Background" Value="{StaticResource BorderBrush}" />
    </Style>

  </Application.Styles>
</Application>
